<h1>Plans & Pricing</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Charges</th>
    <th>Expiry</th>
    <th>Level</th>
    <th>Allowed open jobs</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @packages.each do |package| %>
    <tr>
      <td><%= package.name %></td>
      <td><%= package.charges %></td>
      <td><%= package.expiry %></td>
      <td><%= package.level %></td>
      <td><%= package.allowed_open_jobs %></td>
      <td><%= link_to 'Show', package %></td>
      <td><%= link_to 'Edit', edit_package_path(package) %></td>
      <td><%= link_to 'Destroy', package, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

